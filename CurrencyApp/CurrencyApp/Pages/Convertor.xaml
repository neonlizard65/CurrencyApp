<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CurrencyApp.Convertor"
             Title="Converter">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="CurrencyPicker1"
                    ItemDisplayBinding="{Binding Vname}"/>
            <Entry x:Name="Valute1"/>
            <Button Text="Конвертировать" x:Name="Convert_Btn" Clicked="Convert_Btn_Clicked"/>
            <Picker x:Name="CurrencyPicker2"
                    ItemDisplayBinding="{Binding Vname}"/>
            <Label x:Name="Valute2"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>