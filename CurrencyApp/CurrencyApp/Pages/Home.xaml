<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CurrencyApp.Home"
             Title="Home">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="NewsList" HasUnevenRows="True" ItemTapped="TapGestureRecognizer_Tapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical">
                                <Label x:Name="DateNews" Text="{Binding DocDate, StringFormat='{}{0: HH:mm     dd/MM/yyyy}'}" />
                                <Label x:Name="HeaderNews" Text="{Binding Title}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="ShutUp" Text="OFF FACE" Clicked="ShutUp_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>